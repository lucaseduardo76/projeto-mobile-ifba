<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBA909">



    <!-- Barra de busca -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_voltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Voltar" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Ex.: 385"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/btnPokeball"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/pokeball"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Número no fundo -->

    <!-- Imagem do Pokémon -->

    <!-- Setas -->
    <TextView
        android:id="@+id/pokemonNumber"
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_marginTop="90dp"
        android:alpha="0.2"
        android:text="#025"
        android:textColor="#FFFFFF"
        android:textSize="170sp" />

    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/pikachu" />

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_media_previous"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_media_next"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <!-- Informações do Pokémon -->
    <LinearLayout
        android:id="@+id/infoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonImage"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tipo -->
        <TextView
            android:id="@+id/pokemonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Nome -->
        <TextView
            android:id="@+id/pokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pikachu"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Características -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="18dp">

                <TextView
                    android:text="Height"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"
                    android:layout_width="80dp"/>

                <TextView
                    android:text="Weight"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"
                    android:layout_width="80dp"/>

                <TextView
                    android:text="Abilities"
                    android:textColor="#FFFFFF"
                    android:layout_height="80dp"
                    android:layout_width="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_height="18dp">

                <TextView
                    android:text="0.6 M"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"
                    android:layout_width="80dp"/>

                <TextView
                    android:text="12 Kg"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"
                    android:layout_width="80dp"/>

                <TextView
                    android:text="sand-veil"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"
                    android:layout_width="80dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Barras de status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Item HP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:text="Hp"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="50"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="50"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"/>
            </LinearLayout>

            <!-- Item Attack -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:text="Attack"
                    android:textColor="#FFFFFF"
                    android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="75"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="75"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>
            </LinearLayout>

            <!-- Defense -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:text="Defense"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="85"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="85"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>
            </LinearLayout>

            <!-- Special Attack -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:text="Special Attack"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="20"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="20"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>
            </LinearLayout>

            <!-- Special Defense -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:text="Special Defense"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="30"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="30"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>
            </LinearLayout>

            <!-- Speed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:text="Speed"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="40"
                    android:progressTint="#FFFFFF" />

                <TextView
                    android:layout_width="40dp"
                    android:gravity="end"
                    android:text="40"
                    android:textColor="#FFFFFF"  android:layout_height="18dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
